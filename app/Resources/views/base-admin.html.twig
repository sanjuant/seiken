{%- if form is defined -%}{% form_theme form 'bootstrap_3_layout.html.twig' %}{%- endif -%}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin</title>

    {%- block stylesheet -%}
        <!-- Bootstrap core CSS -->
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Bootstrap Admin CSS -->
        <link href="{{ asset('assets/css/united.bootstrap.min.css') }}" rel="stylesheet">

        <!-- Bootstrap DataTables CSS -->
        <link rel="stylesheet" type="text/css"
              href="{{ asset('assets/css/dataTables.bootstrap.css') }}">
    {%- endblock %}


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

<div class="container">
    <div class="header clearfix">
        {#{% if app.user is not null %}#}
        <p class="pull-right">app.user.username|capitalize > <a href="#">Déconnexion</a>
        </p>
        <div class="clearfix"></div>
        <hr/>
        <nav>
            <ul class="nav nav-pills pull-right">
                <li role="presentation" {% if 'post.category' is same as(module) %}class="active"{% endif %}>
                    <a href="{{ path("admin.post.categories") }}">Catégories Post</a>
                </li>
                <li role="presentation" {% if 'product.category' is same as(module) %}class="active"{% endif %}>
                    <a href="{{ path("admin.product.categories") }}">Catégories Produit</a>
                </li>
                <li role="presentation" {% if 'post' is same as(module) %}class="active"{% endif %}>
                    <a href="{{ path("admin.posts") }}">Posts</a>
                </li>
                <li role="presentation" {% if 'product' is same as(module) %}class="active"{% endif %}>
                    <a href="{{ path("admin.products") }}">Produits</a>
                </li>
                <li role="presentation" {% if 'type' is same as(module) %}class="active"{% endif %}>
                    <a href="{{ path("admin.product.types") }}">Types</a>
                </li>
                <li role="presentation" {% if 'product.color' is same as(module) %}class="active"{% endif %}>
                    <a href="{{ path("admin.product.colors") }}">Colors</a>
                </li>
                <li role="presentation" {% if 'comment' is same as(module) %}class="active"{% endif %}>
                    <a href="#">Commentaires</a>
                </li>
            </ul>
        </nav>
        {#{% endif %}#}
        <h3 class="text-muted"><a href="{{ path('admin.index') }}">Adminator</a></h3>
    </div>

    <div class="row marketing">
        <div class="col-lg-12">
            {% block content %}{% endblock %}
        </div>
    </div>

    <hr>

    <footer class="footer">
        <p>&copy; 2016 Sorrow, Inc.</p>
    </footer>

</div> <!-- /container -->

{% block javascript %}
    <!-- jQuery -->
    <script src="{{ asset("assets/js/jquery.min.js") }}"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset("assets/js/bootstrap.min.js") }}"></script>
{% endblock %}
</body>
</html>

