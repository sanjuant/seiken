{% extends 'base.html.twig' %}

{% block content %}
    <div class="ui vertical stripe segment">
        <div class="ui middle aligned stackable grid container">
            <div class="row">
                <table class="ui celled table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Color</th>
                        <th>Size</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for index, cartItem in cart %}
                        {% set totalPrice = cartItem.price * cartItem.quantity %}
                        <tr>
                            <td>{{ cartItem.id }}</td>
                            <td>{{ cartItem.name }}</td>
                            <td>{{ cartItem.color }}</td>
                            <td>{{ cartItem.size }}</td>
                            <td>{{ cartItem.quantity }}</td>
                            <td>{{ cartItem.price }}</td>
                            <td>{{ totalPrice }}</td>
                            <td><a href="{{ path('cart.item.delete', {'id': index}) }}">Delete</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}

