{% extends "::base-admin.html.twig" %}

{% block content %}

    <h3>Liste des orders
        {#<small><a class="btn btn-sm btn-info pull-right" href="{{ path('admin.order.add') }}"><i#}
        {#class="glyphicon glyphicon-plus"></i> Ajouter</a></small>#}
    </h3>
    <hr/>

    <table id="table_id" class="table table-striped table-bordered display">
        <thead>
        <tr>
            <th>Id</th>
            <th>Lastname Firstname</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Postal Code</th>
            <th>Payment</th>
            <th>PayOff</th>
            <th></th>
        </tr>
        </thead>
        {%- if orders is not null %}
            <tbody>
            {% for order in orders %}
                <tr class="{%- if order.payOff is not same as(true) -%}alert-danger{%- else -%}alert-success{%- endif -%}">
                    <td>{{ order.id }}</td>
                    <td>{{ order.lastname }} {{ order.firstname }}</td>
                    <td>{{ order.phone }}</td>
                    <td>{{ order.email }}</td>
                    <td>{{ order.postalCode }}</td>
                    <td>{{ order.payment }}</td>
                    <td>{%- if order.payOff is not same as(true) -%}<span
                                class="glyphicon glyphicon-remove"> False</span>{%- else -%}<span
                                class="glyphicon glyphicon-ok"> True</span>{%- endif -%}</td>
                    <td>
                        <div class="btn-group pull-right" role="group">
                            {#<button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown"#}
                            {#aria-haspopup="true" aria-expanded="false">#}
                            {#Actions#}
                            {#<span class="caret"></span>#}
                            {#</button>#}
                            {#<ul class="dropdown-menu ">#}
                            {#<li><a href="{{ path("admin.order.edit", {"id": order.id}) }}"><i#}
                            {#class="glyphicon glyphicon-ok"></i> &nbsp;Editer</a></li>#}
                            {#<li><a href="{{ path("admin.order.delete", {"id": order.id}) }}"><i#}
                            {#class="glyphicon glyphicon-remove"></i> &nbsp;Supprimer</a></li>#}
                            {#</ul>#}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        {% endif %}
    </table>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    {% include 'parts/datatables.html.twig' %}
{% endblock %}