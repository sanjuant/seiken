{% extends "::base-admin.html.twig" %}

{% block content %}

    <h3>Liste des comments</h3>
    <hr/>

    <table id="table_id" class="table table-striped table-bordered display">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Message</th>
            <th>Date</th>
            <th></th>
        </tr>
        </thead>
        {%- if comments is not null %}
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.name }}</td>
                    <td>{{ comment.message }}</td>
                    <td>{{ comment.date|date("d-m-Y", "Europe/Paris") }}</td>
                    <td>
                        <small><a class="btn btn-sm btn-danger pull-right"
                                  href="{{ path("admin.comment.delete", {"id": comment.id}) }}">Supprimer</a></small>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        {% endif %}
    </table>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    {% include 'parts/datatables.html.twig' %}
{% endblock %}